// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward
*/

{
    "VALUES": {
        "id": {
            "type": "PKEY",
            "description":"ID for Section"
        },
        "sectionName": {
            "type": "String",
            "description":"Name of Section"
        },
        "commentsAllowed": {
            "type": "Boolean",
            "description":"Are comments allowed"
        }
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"section/list",
	        "URI": {
	        	"section/list": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"List Sections",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                	"permitAll":[]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","sectionName","commentsAllowed"]
	                }
	        	},
	            "section/show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Show Section",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","sectionName","commentsAllowed"]
	                }
	            },
	            "section/save": {
	            	"METHOD":"PUT",
	            	"DESCRIPTION":"Create Section",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["sectionName","commentsAllowed"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "section/update": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Update Section",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id","sectionName","commentsAllowed"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "section/delete": {
	            	"METHOD":"DELETE",
	            	"DESCRIPTION":"Delete Topic",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            }
	        }
		}
	}
}