// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward
*/

{
    "VALUES": {
        "id": {
            "type": "PKEY",
            "description":"ID for test"
        },
        "testdata": {
            "type": "String",
            "description":"Field to show testdata",
            "mockData": "blahblahblah"
        }
    },
	"CURRENTSTABLE": "2",
	"VERSION": {
		"1": {
			"DEPRECATED":["01/01/2014","This API has been deprecated as of 01/01/2014. Please try the latest stable version for this api."],
	        "URI": {
	            "test/show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Get test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id"],
	                    "ROLE_ADMIN":["testdata"],
	                    "ROLE_USER":["testdata"]
	                }
	            },
	            "test/save": {
	            	"METHOD":"PUT",
	            	"DESCRIPTION":"Create test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["testdata"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "test/update": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Update test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["id","testdata"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            }
	        }
		},
		"2": {
			"DEPRECATED":[],
	        "URI": {
	            "test/fred": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Fred test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id"],
	                    "ROLE_ADMIN":["testdata"],
	                    "ROLE_USER":["testdata"]
	                }
	            },
	            "test/show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Get test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id"],
	                    "ROLE_ADMIN":["testdata"],
	                    "ROLE_USER":["testdata"]
	                }
	            },
	            "test/save": {
	            	"METHOD":"PUT",
	            	"DESCRIPTION":"Create test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["testdata"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "test/update": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Update test data",
	            	"ROLES":["permitAll","ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["id","testdata"]
	                },
